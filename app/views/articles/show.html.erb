<h1><%= @article.title %></h1>
<p><%= @article.content %></p>
<%=link_to "Update", edit_article_path, class:"btn btn-outline-secondary"%>
<%= link_to "Delete",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class:"btn btn-outline-danger mx-2" %>
<%=link_to "Back", articles_path, class:"text-muted text-decoration-none" %>
